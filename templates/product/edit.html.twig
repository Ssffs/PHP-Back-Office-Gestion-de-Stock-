{% extends 'base.html.twig' %}

{% block title %}Modifier Produit{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-warning text-white">
                    <h3 class="card-title mb-0"><i class="fas fa-edit me-2"></i>Modifier : {{ product.title }}</h3>
                </div>
                <div class="card-body bg-light">
                    {# 1. Début du formulaire de modification #}
                    {{ form_start(form) }}
                        <div class="mb-3">
                            <label class="form-label fw-bold">Titre</label>
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.title) }} {# Ajoute ça pour voir les erreurs #}
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Prix</label>
                                {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Catégorie</label>
                                {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                            </div>
                        </div>

                        {# --- AJOUT DU CHAMP QUANTITÉ (Si tu veux pouvoir modifier le stock ici) --- #}
                        {# Si ton ProductType n'a pas le champ quantity, supprime ce bloc #}
                        {% if form.quantity is defined %}
                        <div class="mb-3">
                            <label class="form-label fw-bold">Stock (Quantité)</label>
                            {{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        {% endif %}
                        {# --------------------------------------------------------------------- #}

                        <div class="mb-3">
                            <label class="form-label fw-bold">Image</label>
                            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Description</label>
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_product_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Retour
                            </a>
                            <button class="btn btn-warning text-white">
                                <i class="fas fa-check me-1"></i> Mettre à jour
                            </button>
                        </div>
                    
                    {# 2. Fin du formulaire de modification (OBLIGATOIREMENT ICI) #}
                    {{ form_end(form) }}

                    {# 3. Le formulaire de suppression est MAINTENANT à l'extérieur #}
                    <div class="mt-3 text-end border-top pt-3">
                         <span class="text-muted small me-2">Zone dangereuse :</span>
                         {{ include('product/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}