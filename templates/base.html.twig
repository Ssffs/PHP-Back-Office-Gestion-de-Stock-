<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}StockMaster{% endblock %}</title>

       <link rel="stylesheet" href="https://bootswatch.com/5/litera/bootstrap.min.css">

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    </head>
    <body>
        <div class="d-flex" id="wrapper">
            <div class="bg-primary text-white border-end" id="sidebar-wrapper" style="min-height: 100vh; min-width: 250px;">
                <div class="sidebar-heading text-center py-4 fs-4 fw-bold text-uppercase border-bottom border-light">
                    <i class="fas fa-boxes me-2"></i>StockMaster
                </div>
                <div class="list-group list-group-flush my-3">
                    <a href="{{ path('app_dashboard') }}" class="list-group-item list-group-item-action bg-transparent text-white fw-bold border-0">
                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                    </a>
                    <a href="{{ path('app_product_index') }}" class="list-group-item list-group-item-action bg-transparent text-white fw-bold border-0">
                        <i class="fas fa-laptop me-2"></i>Produits
                    </a>
                    <a href="{{ path('app_category_index') }}" class="list-group-item list-group-item-action bg-transparent text-white fw-bold border-0">
                        <i class="fas fa-list me-2"></i>Catégories
                    </a>
                </div>
            </div>

            <div id="page-content-wrapper" class="w-100 bg-light">
                <nav class="navbar navbar-expand-lg navbar-dark bg-primary border-bottom shadow-sm">
                    <div class="container-fluid">
    <span class="navbar-brand mb-0 h1 ms-3">Gestion de Stock</span>

    <div class="d-flex align-items-center ms-auto">
        {% if app.user %}
            {# Si l'utilisateur est connecté #}
            <div class="me-3 text-end">
                <small class="text-white d-block">Connecté en tant que :</small>
                <span class="text-white fw-bold">{{ app.user.userIdentifier }}</span>
            </div>
            <a href="{{ path('app_logout') }}" class="btn btn-danger btn-sm">
                <i class="fas fa-sign-out-alt"></i> Déconnexion
            </a>
        {% else %}
            {# Si personne n'est connecté #}
            <a href="{{ path('app_login') }}" class="btn btn-light btn-sm me-2">Connexion</a>
            <a href="{{ path('app_register') }}" class="btn btn-outline-light btn-sm">Inscription</a>
        {% endif %}
    </div>
</div>
                </nav>

                <div class="container-fluid px-4 mt-4">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
